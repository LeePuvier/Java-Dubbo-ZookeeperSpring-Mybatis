<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans-4.3.xsd        http://dubbo.apache.org/schema/dubbo        http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="Java-Learn-Doubbo-Provider"  />

    <!-- 使用zookeeper做为注册中心 -->
    <!-- 注册中心的ip地址 -->
    <dubbo:registry protocol="zookeeper" address="zookeeper://localhost:2181" />

    <!-- 扫描注解包路径，多个包用逗号分隔，不填pacakge表示扫描当前ApplicationContext中所有的类 -->
    <!--<dubbo:annotation package="service.impl"/>-->

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20880" />

    <!-- service implementation, as same as regular local bean -->
    <bean id="userService" class="com.leepuvier.dubbo.provider.service.impl.UserServiceImpl"/>
    <bean id="demoService" class="com.leepuvier.dubbo.provider.service.impl.DemoServiceImpl" />

    <!-- ref中的值要跟服务实现类中的@Server的值一致 -->
    <dubbo:service interface="com.leepuvier.dubbo.common.service.UserService" ref="userService" timeout="1200000"></dubbo:service>
    <dubbo:service interface="com.leepuvier.dubbo.common.service.DemoService" ref="demoService"></dubbo:service>
</beans>